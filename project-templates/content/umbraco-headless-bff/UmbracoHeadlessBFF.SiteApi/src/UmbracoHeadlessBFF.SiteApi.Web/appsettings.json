{
  "ConnectionStrings": {
    "Cache": "from-secrets"
  },
  "Services": {
    "Cms": {
      "Parameters": {
        "DeliveryApiKey": "<from-secrets>"
      }
    }
  },
  //Timers are in seconds by default unless stated otherwise by the variable names (xxxMs, xxxMin, etc)
  "Caching": {
    "Enabled": true,
    "Default": {
      "Duration": 7200,
      "DurationDistributed": 86400,
      "NullDuration": 60,
      "DistributedCacheCircuitBreakerDuration": 10,
      "FailSafeIsEnabled": true,
      "FailSafeMaxDuration": 10800,
      "DistributedCacheFailSafeMaxDuration": 93600,
      "DistributedLocking": false,
      "FailSafeThrottleDuration": 300,
      "FactorySoftTimeoutMs": 150,
      "FactoryHardTimeout": 30,
      "DistributedCacheSoftTimeoutMs": 150,
      "DistributedCacheHardTimeout": 5,
      "AllowBackgroundDistributedCacheOperations": true,
      "AllowBackgroundBackplaneOperations": true,
      "JitterMaxDuration": 300,
      "EagerRefreshThreshold": 0.75
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Async",
      "Serilog.Sinks.OpenTelemetry",
      "Serilog.Enrichers.ClientInfo",
      "Serilog.Enrichers.Process",
      "Serilog.Enrichers.Thread",
      "Serilog.Exceptions"
    ],
    "Enrich": [
      "WithProcessId",
      "WithThreadId",
      "WithClientIp",
      "FromLogContext",
      "WithExceptionDetails",
      {
        "Name": "WithCorrelationId",
        "Args": {
          "addValueIfHeaderAbsence": true
        }
      },
      {
        "Name": "WithRequestHeader",
        "Args": {
          "headerName": "x-site-host",
          "propertyName": "siteHost"
        }
      },
      {
        "Name": "WithRequestHeader",
        "Args": {
          "headerName": "x-site-path",
          "propertyName": "sitePath"
        }
      }
    ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore.Hosting": "Warning",
        "Microsoft.AspNetCore.Mvc": "Warning",
        "Microsoft.AspNetCore.Routing": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "ZiggyCreatures.Caching.Fusion.FusionCache": "Error",
        "System": "Warning"
      }
    },
    "WriteTo": {
      "Async": {
        "Name": "Async",
        "Args": {
          "configure": {
            "Console": "Console",
            "Otel": {
              "Name": "OpenTelemetry",
              "Args": {
                "OnBeginSuppressInstrumentation": "OpenTelemetry.SuppressInstrumentationScope::Begin, OpenTelemetry"
              }
            }
          }
        }
      }
    }
  },
  "AllowedHosts": "*"
}
